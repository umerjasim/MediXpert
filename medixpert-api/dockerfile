# Use official Node.js image
FROM node:18-alpine

# Set working directory inside the container
WORKDIR /app

# Copy package.json and package-lock.json
COPY package.json package-lock.json ./

# Install dependencies
RUN npm install

# Copy the rest of the project files
COPY . .

# Compile TypeScript (Generates `dist/`)
RUN npm run build

# Expose port (Make sure this matches your Express app)
EXPOSE 3000

# Start the application and seed the database only if SEED_DB=true
CMD ["sh", "-c", "if [ \"$SEED_DB\" = \"true\" ]; then npm run seed:prod; fi && npm start"]
