# Use official Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy only package.json and lock file first (for better caching)
COPY package.json package-lock.json ./

# Install dependencies
RUN npm install --frozen-lockfile

# Remove old build if it exists
RUN rm -rf dist/

# Copy the rest of the project files (excluding dist)
COPY . .

# Ensure `dist/` exists
RUN mkdir -p dist

# Compile TypeScript
RUN npm run build

# Verify that the build is successful
RUN ls -l dist/

# Expose port
EXPOSE 8500

# Start the application
CMD ["sh", "-c", "if [ \"$SEED_DB\" = \"true\" ]; then npm run seed:prod; fi && npm start"]
