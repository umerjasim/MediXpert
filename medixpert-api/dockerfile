# Limit memory usage to prevent Render from killing the process
ENV NODE_OPTIONS="--max-old-space-size=512"

# Use official Node.js image
FROM node:18-alpine

# Set working directory inside the container
WORKDIR /app

# Copy package.json and package-lock.json
COPY package.json package-lock.json ./

# Install dependencies
RUN npm install --omit=dev  # âœ… Install only production dependencies

# Remove any existing build
RUN rm -rf dist/

# Copy the rest of the project files (excluding dist)
COPY . .

# Compile TypeScript with limited memory
RUN npm run build  

# Expose port
EXPOSE 8500

# Start the application
CMD ["sh", "-c", "if [ \"$SEED_DB\" = \"true\" ]; then npm run seed:prod; fi && npm start"]
